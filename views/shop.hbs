<main>
  {{#if hasProducts}}
  <h1>No products</h1>
  {{else}}
  <div class="grid">
    {{#each products}}
    <article class="card product-item">
      <header class="card__header">
        <h1 class="product__title">{{this.title}}</h1>
      </header>
      <div class="card__image"><img src="https://picsum.photos/536/354" alt=""></div>
      <div class="card__content">
        <h2 class="product__price">20</h2>
        <p class="product__description">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Nulla, natus.</p>
      </div>
      <div class="card__actions">
        <button class="btn">Add to Cart</button>
      </div>
    </article>
    {{/each}}
  </div>
  {{/if}}
</main>