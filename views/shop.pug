extends layouts/main-layouts.pug

block styles
  link(rel="stylesheet", href="/css/main.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if products.length == 0
      h1 No products
    else
      .grid
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://picsum.photos/536/354", alt="")
            .card__content
              h2.product__price 20
              p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Magnam, aperiam.
            .card__actions
              button.btn Add to Cart